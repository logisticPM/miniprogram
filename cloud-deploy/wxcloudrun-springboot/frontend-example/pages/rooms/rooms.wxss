.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.filter-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.filter-row {
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.filter-options {
  display: flex;
  flex-wrap: wrap;
}

.filter-option {
  font-size: 26rpx;
  color: #333;
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.filter-option.active {
  background-color: #1989fa;
  color: #fff;
}

.room-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.room-item {
  width: 48%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
  box-sizing: border-box;
}

.room-item.grabbed {
  background-color: #f5f5f5;
  opacity: 0.8;
}

.room-item.selected {
  border: 2rpx solid #1989fa;
}

.room-info {
  margin-bottom: 10rpx;
}

.room-number {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.room-detail {
  font-size: 24rpx;
  color: #666;
}

.room-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  display: inline-block;
  background-color: #e8f5e9;
  color: #4caf50;
}

.room-item.grabbed .room-status {
  background-color: #eeeeee;
  color: #9e9e9e;
}

.room-check {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}

.empty-list, .loading, .error {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.retry-btn {
  margin-top: 20rpx;
  color: #1989fa;
  font-size: 28rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.selected-count {
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  background-color: #1989fa;
  color: #fff;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
}

.submit-btn.disabled {
  background-color: #cccccc;
}

/* 手机号输入弹窗 */
.phone-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.dialog-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.dialog-input input {
  height: 40rpx;
  width: 100%;
}

.dialog-buttons {
  display: flex;
  justify-content: space-between;
}

.dialog-btn {
  width: 48%;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.dialog-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.dialog-btn.confirm {
  background-color: #1989fa;
  color: #fff;
}
