.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.phone-query {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.query-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.query-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.query-input input {
  height: 40rpx;
  width: 100%;
}

.query-btn {
  background-color: #1989fa;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
}

.record-list {
  width: 100%;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.phone-display {
  font-size: 28rpx;
  font-weight: bold;
}

.back-btn {
  font-size: 26rpx;
  color: #1989fa;
}

.record-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.record-activity {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.record-rooms {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.room-tag {
  font-size: 24rpx;
  color: #1989fa;
  background-color: rgba(25, 137, 250, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 16rpx;
  margin-bottom: 10rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.empty-record, .loading, .error {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.back-link, .retry-btn {
  margin-top: 20rpx;
  color: #1989fa;
  font-size: 28rpx;
}
