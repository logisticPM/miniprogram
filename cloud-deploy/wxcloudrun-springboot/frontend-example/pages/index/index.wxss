.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.record-btn {
  font-size: 28rpx;
  color: #1989fa;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(25, 137, 250, 0.1);
}

.activity-list {
  width: 100%;
}

.activity-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.activity-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.activity-status {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-0 {
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
}

.status-1 {
  color: #4caf50;
  background-color: rgba(76, 175, 80, 0.1);
}

.status-2 {
  color: #9e9e9e;
  background-color: rgba(158, 158, 158, 0.1);
}

.empty-list, .loading, .error {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.retry-btn {
  margin-top: 20rpx;
  color: #1989fa;
  font-size: 28rpx;
}
