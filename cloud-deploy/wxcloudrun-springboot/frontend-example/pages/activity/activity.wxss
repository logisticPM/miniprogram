.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.activity-detail {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
}

.activity-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-0 {
  color: #ff9800;
  background-color: rgba(255, 152, 0, 0.1);
}

.status-1 {
  color: #4caf50;
  background-color: rgba(76, 175, 80, 0.1);
}

.status-2 {
  color: #9e9e9e;
  background-color: rgba(158, 158, 158, 0.1);
}

.activity-info {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 30rpx;
}

.info-item {
  width: 50%;
  margin-bottom: 20rpx;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 6rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
}

.activity-time {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.time-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  font-size: 28rpx;
  color: #666;
}

.time-value {
  font-size: 28rpx;
  color: #333;
}

.action-btn {
  background-color: #1989fa;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 8rpx;
  margin-top: 40rpx;
}

.action-btn.disabled {
  background-color: #cccccc;
}

.loading, .error {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.retry-btn {
  margin-top: 20rpx;
  color: #1989fa;
  font-size: 28rpx;
}

/* 密码输入弹窗 */
.password-dialog {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}

.dialog-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialog-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.dialog-input {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.dialog-input input {
  height: 40rpx;
  width: 100%;
}

.dialog-buttons {
  display: flex;
  justify-content: space-between;
}

.dialog-btn {
  width: 48%;
  text-align: center;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.dialog-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.dialog-btn.confirm {
  background-color: #1989fa;
  color: #fff;
}
