/* pages/activity/password/password.wxss */
page {
    background-color: #f7f7f7;
}

.container {
    padding-bottom: 30rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
        Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
        sans-serif;
}

/* 加载状态样式 */
.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    color: #999;
    font-size: 28rpx;
}

.loading-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 20rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #07c160;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

/* 头部样式 */
.header {
    width: 100%;
    position: relative;
    margin-bottom: 30rpx;
}

.cover-image {
    width: 100%;
    height: 300rpx;
}

.activity-title {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx 30rpx;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0));
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
}

/* 表单区域样式 */
.form-section,
.result-section {
    margin: 0 30rpx;
    background-color: #fff;
    border-radius: 16rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
    text-align: center;
}

.form-tip {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 30rpx;
    text-align: center;
}

.form-item {
    margin-bottom: 30rpx;
}

.form-label {
    display: block;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #666;
}

.form-input {
    width: 100%;
    height: 80rpx;
    border: 1px solid #ddd;
    border-radius: 8rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}

.submit-btn {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #07c160;
    color: #fff;
    font-size: 32rpx;
    border-radius: 45rpx;
    margin-top: 20rpx;
}

/* 结果区域样式 */
.password-box {
    margin: 30rpx 0;
    padding: 30rpx;
    background-color: #f9f9f9;
    border-radius: 8rpx;
    text-align: center;
}

.password {
    font-size: 48rpx;
    font-weight: bold;
    color: #07c160;
    margin-bottom: 20rpx;
    letter-spacing: 4rpx;
}

.countdown {
    font-size: 26rpx;
    color: #fa5151;
}

.result-tips {
    margin: 30rpx 0;
}

.tip-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 15rpx;
}

.tip-icon {
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    background-color: #fa5151;
    color: #fff;
    border-radius: 50%;
    font-size: 24rpx;
    margin-right: 10rpx;
    flex-shrink: 0;
}

.tip-text {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
}

.button-group {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
}

.copy-btn,
.grab-btn {
    width: 48%;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 30rpx;
    border-radius: 45rpx;
}

.copy-btn {
    background-color: #f0f0f0;
    color: #333;
}

.grab-btn {
    background-color: #07c160;
    color: #fff;
}