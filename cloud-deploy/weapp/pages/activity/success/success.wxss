/* pages/activity/success/success.wxss */
page {
    background-color: #f7f7f7;
}

.container {
    padding-bottom: 30rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
        Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
        sans-serif;
}

/* 加载状态样式 */
.loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    color: #999;
    font-size: 28rpx;
}

.loading-icon {
    width: 40rpx;
    height: 40rpx;
    margin-bottom: 20rpx;
    border: 4rpx solid #f3f3f3;
    border-top: 4rpx solid #07c160;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

/* 成功头部样式 */
.success-header {
    background-color: #07c160;
    padding: 60rpx 0;
    text-align: center;
    color: #fff;
}

.success-icon {
    margin-bottom: 20rpx;
}

.success-title {
    font-size: 40rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.success-desc {
    font-size: 28rpx;
    opacity: 0.8;
}

/* 倒计时样式 */
.countdown-section {
    background-color: #fff;
    padding: 30rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.countdown-title {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
}

.countdown-time {
    font-size: 60rpx;
    font-weight: bold;
    color: #fa5151;
    margin: 20rpx 0;
}

.countdown-desc {
    font-size: 26rpx;
    color: #999;
}

/* 区块样式 */
.house-section,
.grab-section,
.contact-section {
    background-color: #fff;
    padding: 30rpx;
    margin-bottom: 20rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    color: #333;
    border-bottom: 1px solid #eee;
    padding-bottom: 15rpx;
}

/* 房源信息样式 */
.house-images {
    height: 400rpx;
    margin-bottom: 20rpx;
}

.house-image {
    width: 100%;
    height: 100%;
}

.house-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
    color: #333;
}

.house-type {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 10rpx;
}

.house-price {
    font-size: 36rpx;
    color: #fa5151;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.house-address {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 15rpx;
}

.house-features {
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 20rpx;
}

.feature {
    font-size: 24rpx;
    color: #07c160;
    background-color: rgba(7, 193, 96, 0.1);
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

/* 信息项样式 */
.info-item {
    display: flex;
    margin-bottom: 15rpx;
    font-size: 28rpx;
}

.label {
    color: #666;
    width: 180rpx;
    flex-shrink: 0;
}

.value {
    color: #333;
    flex: 1;
}

/* 按钮样式 */
.button-group {
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
    margin-bottom: 20rpx;
}

.call-btn,
.map-btn,
.back-btn {
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 45rpx;
    font-size: 32rpx;
    margin-bottom: 20rpx;
}

.call-btn {
    background-color: #07c160;
    color: #fff;
}

.map-btn {
    background-color: #1989fa;
    color: #fff;
}

.back-btn {
    background-color: #f0f0f0;
    color: #333;
}

/* 提示信息样式 */
.tips {
    padding: 0 30rpx;
    text-align: center;
    font-size: 26rpx;
    color: #999;
}