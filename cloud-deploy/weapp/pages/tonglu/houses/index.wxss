/* pages/tonglu/houses/index.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

.header {
  width: 100%;
  text-align: center;
  padding: 20rpx 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.filter-section {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-group {
  margin-bottom: 20rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.filter-buttons {
  display: flex;
  flex-wrap: wrap;
}

.filter-btn {
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  font-size: 26rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 6rpx;
}

.filter-btn.active {
  color: #fff;
  background-color: #1aad19;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.house-list {
  width: 100%;
}

.house-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.house-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.house-info {
  display: flex;
  margin-bottom: 20rpx;
}

.house-area, .house-price {
  font-size: 26rpx;
  color: #666;
  margin-right: 30rpx;
}

.house-status {
  display: flex;
  align-items: center;
}

.status-tag {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 6rpx;
}

.status-0 {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-1 {
  background-color: #fff2e8;
  color: #fa8c16;
}

.empty-tip {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
} 