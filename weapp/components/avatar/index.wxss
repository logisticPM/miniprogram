.avatar{
 
    overflow: hidden;
    background-size: 100% auto;
    background-repeat: no-repeat;
    position: relative;
}

.avatar .border{
    position: absolute;
    width:100%;
    height:100%;
    border-radius: 100%;
    box-sizing: border-box;
    border-style: solid;
}