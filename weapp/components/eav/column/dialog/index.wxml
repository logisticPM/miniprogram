<van-popup bind:click-overlay="close" bind:close="close" show="{{show}}" safe-area-inset-bottom position="bottom" title="选择" closeable="{{true}}" close-icon="{{true}}" round>
    <view class="outer">
        <view class="title">请选择</view>
        <view class="body">
         <slot></slot>
        </view>

        <view class="footer">
            <van-button custom-style="width:330rpx;" block type="default" bindtap="close">取消</van-button>
            <van-button custom-style="width:330rpx;" block type="primary" bindtap="confirm">确定</van-button>
        </view>
    </view>


</van-popup>